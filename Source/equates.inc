;	#DEFINE NoFDD	; раскоментировать для компилирования без драйвера НГМД
;	#DEFINE NoHDD	; раскоментировать для компилирования без драйвера НЖМД
;
	; Шрифты -- в памяти Вектора (0EF63h-0F663h)
	; БСВВ   -- в памяти Вектора (0F664h-0FFxxh)
S_BIOS	.EQU        0F664h	; адрес начала блока
S_FONT	.EQU        S_BIOS-0700h
LenBIOS .EQU        3153	; размер со шрифтом (упакованный)
;
	; БДОС -- в памяти Вектора (0E200h-...) +368h байт на дисковые буферы
S_BDOS	.EQU        0E200h	; адрес начала
#ifdef NoFDD			; размер (упакованный)
  #ifdef NoHDD
LenBDOS	.EQU        1382	; (без НГМД и НЖМД)
  #else
LenBDOS	.EQU        1783	; (без НГМД)
  #endif
#else
  #ifdef NoHDD
LenBDOS	.EQU        1828	; (без НЖМД)
  #else
LenBDOS	.EQU        2226	; (есть всё)
  #endif
#endif
;
	; МикроДОС с программой предварительной настройки -- на КД (банк 0 как ОЗУ A000-DFFFh)
S_MDOS	.EQU        0BE6Ch	; адрес начала
#ifdef NoFDD			; размер (упакованный)
  #ifdef NoHDD
LenMDOS	.EQU        7215	; (без НГМД и НЖМД)
  #else
LenMDOS	.EQU        7221	; (без НГМД)
  #endif
#else
  #ifdef NoHDD
LenMDOS	.EQU        7221	; (без НЖМД)
  #else
LenMDOS	.EQU        7225	; (есть всё)
  #endif
#endif
;
B_E200	.EQU        0E200h	; холодный рестарт
B_E203	.EQU        0E203h	; горячий рестарт
B_E206	.EQU        0E206h	; запрос статуса клавиатуры
B_E209	.EQU        0E209h	; ввод символа с клавиатуры или м.л.(RET)
B_E20C	.EQU        0E20Ch	; вывод символа на экран/принтер
B_E20F	.EQU        0E20Fh	; выдаёт некие таблицы со ссылками на буферы для дисковых операций
B_E212	.EQU        0E212h	; дисковые операции???
B_E215	.EQU        0E215h	; возврат ссылки на таблицы со строками
B_E218	.EQU        0E218h	; (выполнение цифровых команд мдос)
B_E21B	.EQU        0E21Bh	; запись сектора на КД //форматирование КД ??? нет
;
B_F800	.EQU        0F800h	; холодная загрузка системы
B_F803	.EQU        0F803h	; ввод символа с клавиатуры
B_F806	.EQU        0F806h	; ввод байта с м/л -- сразу RET
B_F809	.EQU        0F809h	; вывод символа на экран
B_F80C	.EQU        0F80Ch	; вывод байта на м/л -- сразу RET
B_F80F	.EQU        0F80Fh	; вывод символа на принтер
B_F812	.EQU        0F812h	; статус клавиатуры
B_F815	.EQU        0F815h	; вывод байта на экран 16-ричном виде
B_F818	.EQU        0F818h	; вывод сообщения на экран (должно оканчиваться 0 байтом)
B_F81B	.EQU        0F81Bh	; ввод символа с клавиатуры без ожидания нажатия
;
A_0004	.EQU        00004h	; номер текущего диска (А=0, В=1...)
A_005C	.EQU        0005Ch	; первый аргумент выполняемой команды (нач.с номера диска, если был)
A_006C	.EQU        0006Ch	; второй аргумент выполняемой команды (нач.с нуля)
A_0080	.EQU        00080h	; аргумент выполняемой команды (<ДЛ>< ><строка><00h>)
;
O_C003	.EQU        0C003h	; сброс системы
